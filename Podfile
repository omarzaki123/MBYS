# platform :ios, '9.0'

target 'Mesh' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Mesh
  pod 'Firebase'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'GoogleAPIClient/Drive', '~> 1.0.2'
  pod 'GTMOAuth2', '~> 1.1.0'
  pod 'FSCalendar'
end

